<h1>ここは編集画面</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '保存' %>

<% end %>
<%= link_to "詳細", show_path(@book.id) %>
<%= link_to "一覧&新規", new_path %>