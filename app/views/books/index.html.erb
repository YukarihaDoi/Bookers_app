<!--という条件で実行するべきアクションを探して実行してくれます。-->

<h2>New book</h2>
<%= form_with model: @book ,url: create_path, method: :post do|f|%>

<h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>
 <br>
 <%= f.submit 'Create Book' %>
<%end%>
