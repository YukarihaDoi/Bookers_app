<h1>Books</h1>

 <% @books.each do|book|%>

 <p>Title</p>
 <span>
   <%= link_to book.title,show_path(book.id) %>
 </span>

 <p>Body</p>
 <span>
 <%= link_to book.body, show_path(book.id)%>
 </span>


 <p>show</p>
 <span>
  <%= link_to show, show_path(book.id)%>
 </span>
 <p>edit</p>
 <span>
  <%= link_to edit, show_path(book.id)%>
 </span>
 <p>destroy</p>
 <span>
  <%= link_to destroy, show_path(book.id)%>
 </span>


 <%end%>

