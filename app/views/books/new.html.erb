<h1>ここは一覧表示</h1>

<% @books.each do |book| %>

  <p>タイトル</p>
  <span>
   <%= link_to book.title,show_path(book.id) %>
  </span>
  
  <p>内容</p>
  <span>
   <%= link_to book.body, show_path(book.id)%>
   </span>
<% end %>


<h1>ここは新規投稿表示</h1>

<!-- form_with部分 -->
 <%= form_with model: @book do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>

 <% end %>